@model List<ShopOnline.Models.CartItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="content_top">
        <div class="clear"></div>
    </div>
    @if (Model.Count > 0)
    {
        <div class="section group">
            <table class="table">
                <thead>
                    <tr>
                        <td>Product Code</td>
                        <td>Product Name</td>
                        <td>Product Image</td>
                        <td>Product Quantity</td>
                        <td>Product Price</td>
                        <td>Bill</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="quantity" value="@item.Quantity" /></td>
                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("n0")</td>
                            <td>@((item.Quantity * item.Product.Price.GetValueOrDefault(0)).ToString("n0"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <br />
        <div class="alert alert-info" style="width:500px">
            You have no items in your Shopping cart
        </div>
    }
</div>



