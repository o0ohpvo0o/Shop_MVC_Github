@model Model.EF.Contact
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script>
        // This example displays a marker at the center of Australia.
        // When the user clicks the marker, an info window opens.

        function initMap() {
            var OnlineShop = { lat: -25.363, lng: 131.044 };
            var map = new google.maps.Map($('#mapCanvas'), {
                zoom: 4,
                center: OnlineShop
            });

            var contentString = '@Model.Content';
            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: OnlineShop,
                map: map,
                title: 'OnlineShop Company Ltd'
            });
            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });
        }
        //google.maps.event.addDomListener(window, 'load', initMap);
    </script>
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script src="/Assets/client/js/controller/contactController.js"></script>
}
<style>
    p {
        padding: 2px;
    }

    #mapCanvas {
        height: 100%;
    }
</style>

<div class="content">
    <div class="row">
        <div class="col-md-6">
            <h2>Contact information</h2>
            @Html.Raw(Model.Content)
            <hr />
            <br />
            <h2>Send your feedback or request</h2>
            <div class="form-group">
                <label>Name</label>
                <input type="text" id="txtName" class=" form-control" />
                <label>Email</label>
                <input type="text" id="txtEmail" class=" form-control" />
                <label>Phone number</label>
                <input type="text" id="txtPhone" class=" form-control" />
                <label>Content</label>
                <textarea rows="6" id="txtContent" class=" form-control"></textarea><br />
                <input type="button" formmethod="post" id="btnSubmit" value="Submit" class="btn btn-success" />
            </div>
        </div>
        <div class="col-md-6">
            <h2>Map</h2>
            <div class="map" id="mapCanvas"></div>
        </div>
    </div>
</div>

